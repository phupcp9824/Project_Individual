@model Data.Model.Product

@{
    ViewData["Title"] = "DetailProduct";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<h1>DetailProduct</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaProduct)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaProduct)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameProduct)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameProduct)
        </dd>
        <dt class="col-sm-2">
            <img src="@Model.Image" width="80" height="100" alt="Alternate Text" />
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Material)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Material)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupplierId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplierId)
        </dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@Model.Id" class="btn btn-outline-success"><i class="bi bi-pencil-fill"></i></a>
    <a asp-action="GetProduct" class="btn btn-outline-dark"><i class="bi bi-skip-backward-btn"></i></a>
</div>
