@model IEnumerable<Data.Model.Supplier>

@{
    ViewData["Title"] = "GetSupplier";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<h3 class="text-center" style="color:chocolate">List Supplier</h3>
<div class="row mt-2">
    <div class="col-10">
        <form action="/Supplier/GetSupplier" method="get" class="form-inline my-2 my-lg-0 d-flex">
            <input class="form-control mr-sm-2" type="search" name="name" placeholder="Search by name..." aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
    <div class="col-2">
        <form asp-controller="Supplier" asp-action="GetSupplier" method="get" class="form-inline my-2 my-lg-0">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Show All</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <p>
        <a asp-controller="Supplier" asp-action="CreateSupplier" class="btn btn-outline-primary"><i class="bi bi-plus-circle-fill"></i></a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <a asp-controller="Supplier" asp-action="EditSupplier" asp-route-id="@item.Id" class="btn btn-outline-success"><i class="bi bi-pencil-fill"></i></a>
                        <a asp-controller="Supplier" asp-action="DetailSupplier" asp-route-id="@item.Id" class="btn btn-outline-secondary"><i class="bi bi-ticket-detailed"></i></a>
                        <form class="d-inline" asp-controller="Supplier" asp-action="DeleteSupplier" asp-route-id="@item.Id" method="post">
                            <button class="btn btn-outline-danger"><i class="bi bi-trash3"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
