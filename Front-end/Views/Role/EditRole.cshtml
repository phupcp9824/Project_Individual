@model Data.Model.Role

@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<h1 class="text-center" style="color:chocolate">Edit Role</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Role" asp-action="EditRole" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="GetRole" class="btn btn-outline-dark"><i class="bi bi-skip-backward-btn"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
