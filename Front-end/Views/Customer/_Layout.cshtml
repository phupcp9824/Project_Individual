<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Front_end</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Front_end.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        ul.navbar-nav li.nav-item a.nav-link {
            font-size: 1.1rem;
            color: black;
            margin-right: 18px;
        }
        /* Adjust the logo size for responsiveness */
        .navbar-brand img {
            max-width: 100px;
            height: auto;
        }

        .Cart-Person i {
            font-size: 1.9rem; /* Adjust the size as needed */
            margin-right: 30px;
        }

        #cart-quantity {
            top: -10px; 
            left: 15px; /* Adjust this value to center the badge over the cart icon */
            border-radius: 50%;
            width: 24px; 
            height: 24px;
            display: flex; /* Use flex to center the content */
            align-items: center; /* Center theo chiều dọc */
            justify-content: center; /* Center ngang */
            font-size: 12px; 
        }

        .dropdown-toggle::after {
            display: none; /* Ẩn mũi tên */
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand ms-3" href="#">
                    <img src="~/image/Logoo.png" alt="Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" aria-current="page" asp-controller="Customer" asp-action="Trangchu">TRANG CHỦ</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">GIỚI THIỆU</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">TIN TỨC</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">SẢN PHẨM</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">LIÊN HỆ</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">KHUYẾN MÃI</a></li>
                        <form class="d-flex ms-5" role="search">
                            <button class="btn btn-outline-success" style="font-size: 1.2rem;" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    </ul>
                    <div class="Cart-Person d-flex align-items-center position-relative">
                        <a class="mb-0 fs-4 me-2 position-relative">
                            <i class="bi bi-cart4"></i>
                            <span id="cart-quantity" class="badge bg-danger position-absolute" >0</span>
                        </a>
                        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle" style="font-size:1.8rem"></i>
                                    <span class="dropdown-toggle-split" style="display: none;"></span> <!-- Ẩn dấu mũi tên -->
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="/User/LoginFirm">Login</a></li>
                                    <li><a class="dropdown-item" href="/User/SignUp">Sign Up</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid border-top">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <p>&copy; Your Company - All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
