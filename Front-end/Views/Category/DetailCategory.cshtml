@model Data.Model.Category

@{
    ViewData["Title"] = "DetailCategory";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<div>
    <h3 class="text-center" style="color:chocolate">Detail Category</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@Model.Id" class="btn btn-outline-success"><i class="bi bi-pencil-fill"></i></a>
    <a asp-action="GetCategory" class="btn btn-outline-dark"><i class="bi bi-skip-backward-btn"></i></a>
</div>

